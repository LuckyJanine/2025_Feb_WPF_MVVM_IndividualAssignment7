<Window x:Class="CellBank.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CellBank"
        mc:Ignorable="d"
        Title="Cell Bank Registration" Height="600" Width="1000">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="1.6*"/>
        </Grid.ColumnDefinitions>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="1.2*"/>
            </Grid.RowDefinitions>
            <GroupBox FontSize="18"
                Header="Donor Information" Margin="10">
                <StackPanel>
                    <Grid Margin="5, 10, 5, 0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock FontSize="16"
                            Text="Gender (eg. XX or XY): "/>
                        <TextBox 
                            x:Name="txtGender"
                            FontSize="16"
                            Grid.Column="1"
                            Text="{Binding CurrentDonor.Gender,
                            UpdateSourceTrigger=PropertyChanged,
                            ValidatesOnDataErrors=True}"/>
                        <TextBlock  Grid.Row="1" Grid.Column="1"
                                    Margin="0, 2, 0, 0"
                                    FontSize="10"
                                    Foreground="Red"
                                    Text="{Binding (Validation.Errors).CurrentItem.ErrorContent, 
                                    ElementName=txtGender}" />
                    </Grid>
                    <Grid Margin="5, 10, 5, 0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock FontSize="16"
                                   TextWrapping="Wrap"
                            Text="Age: "/>
                        <TextBox 
                            x:Name="txtAge"
                            FontSize="16"
                            Grid.Column="1"
                            Text="{Binding CurrentDonor.Age,
                            UpdateSourceTrigger=PropertyChanged,
                            ValidatesOnDataErrors=True}"/>
                        <TextBlock  Grid.Row="1" Grid.Column="1"
                            Margin="0, 2, 0, 0"
                            FontSize="11"
                            Foreground="Red" 
                            Text="{Binding (Validation.Errors).CurrentItem.ErrorContent, 
                            ElementName=txtAge}" />
                    </Grid>
                    <Grid Margin="10, 15, 10, 10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock FontSize="16"
                            TextWrapping="Wrap"
                            Text="Blood Type: "/>
                        <TextBox FontSize="16"
                            Grid.Column="1"/>
                    </Grid>
                    <Button HorizontalAlignment="Right"
                            Content="Add Donation" FontSize="14"
                        Width="100" Height="30" Margin="0,15,10,0">
                    </Button>
                </StackPanel>
            </GroupBox>
        </Grid>
    </Grid>
</Window>
